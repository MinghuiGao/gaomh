<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/ll_header_about"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_logo_about"
            android:layout_width="70dip"
            android:layout_height="40dip"
            android:layout_marginLeft="5dip"
            android:src="@drawable/dl_daoli" />

        <Button
            android:id="@+id/bt_back2about"
            android:layout_width="70dip"
            android:layout_height="37dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dip"
            android:background="@drawable/button_long_selected"
            android:text="@string/back2main"
            android:textColor="@android:color/white"
            android:textSize="14dip" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:background="@drawable/devider_round" />

        <TextView
            android:id="@+id/tv_title_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:text="@string/about"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_header_about"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/dl_label" />

    <TextView
        android:id="@+id/tv_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_about"
        android:layout_centerHorizontal="true"
        android:text="DAOLICLOUD File Box V1.0.0"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_about2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_about"
        android:layout_centerHorizontal="true"
        android:text="Build 20130123"
        android:textColor="#cacbca" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DAOLICLOUD File Box,All rights reserved."
        android:textColor="#cacbca" 
        android:layout_marginTop="380dip"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_about3"
        
        />
<TextView
        android:id="@+id/tv_about4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_about3"
        android:layout_centerHorizontal="true"
        android:text="Copyright@2013"
        android:textColor="#cacbca" />
</RelativeLayout>