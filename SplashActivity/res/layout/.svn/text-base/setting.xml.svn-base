<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/ll_header_main"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="70dip"
            android:layout_height="40dip"
            android:layout_marginLeft="5dip"
            android:src="@drawable/dl_daoli" />

        <Button
            android:id="@+id/bt_back2main"
            android:layout_width="70dip"
            android:layout_height="37dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dip"
            android:background="@drawable/button_long_selected"
            android:text="@string/back2main"
            android:textColor="@android:color/white"
            android:textSize="14dip" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:background="@drawable/devider_round" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/setting"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
    </RelativeLayout>

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_margin="3dip"
       android:layout_below="@id/ll_header_main"
     android:background="@anim/shape_rounded_rectangle"
      >
    <RelativeLayout
        android:id="@+id/rl_setting_filepath"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_below="@id/ll_header_main"
        android:gravity="center_vertical"
        android:paddingLeft="6dip"
        android:paddingRight="6dip" >

        <TextView
            android:id="@+id/tv_setting_filepath_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="“我的文档”文件夹位置"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_setting_filepath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_setting_filepath_title"
            android:layout_marginTop="5dip"
            android:text="当前路径："
            android:textSize="12dip" />


    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@id/rl_setting_filepath"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="2dip"
        android:background="@drawable/devider_round" />

    <RelativeLayout
        android:id="@+id/rl_setting_service"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_below="@id/rl_setting_filepath"
        android:background="@drawable/main_item_selector"
        android:gravity="center_vertical"
        android:paddingLeft="6dip"
        android:paddingRight="6dip" >

        <TextView
            android:id="@+id/tv_setting_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="退出时启动后台服务"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/iv_setting_serivce_on"
            android:layout_width="60dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/select" />

        <ImageView
            android:id="@+id/iv_setting_serivce_off"
            android:layout_width="60dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/unselected" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@id/rl_setting_service"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="2dip"
        android:background="@drawable/devider" />

    <RelativeLayout
        android:id="@+id/rl_setting_desklabel"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_below="@id/rl_setting_service"
        android:background="@drawable/main_item_selector"
        android:gravity="center_vertical"
        android:paddingLeft="6dip"
        android:paddingRight="6dip" >

        <TextView
            android:id="@+id/tv_setting_desklabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="开启桌面浮标"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/iv_setting_desklabel_on"
            android:layout_width="60dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/select" />

        <ImageView
            android:id="@+id/iv_setting_desklabel_off"
            android:layout_width="60dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/unselected" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@id/rl_setting_desklabel"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="2dip"
        android:background="@drawable/devider" />

    <RelativeLayout
        android:id="@+id/rl_check_version"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_below="@id/rl_setting_desklabel"
        android:background="@drawable/main_item_selector"
        android:gravity="center_vertical"
        android:paddingLeft="6dip"
        android:paddingRight="6dip" >

        <TextView
            android:id="@+id/tv_check_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="自动检查版本更新"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/iv_check_version_on"
            android:layout_width="60dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/select" />

        <ImageView
            android:id="@+id/iv_check_version_off"
            android:layout_width="60dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/unselected" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@id/rl_check_version"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="2dip"
        android:background="@drawable/devider" />

    <RelativeLayout
        android:id="@+id/rl_aboutus"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_below="@id/rl_check_version"
        android:background="@drawable/main_item_selector"
        android:gravity="center_vertical"
        android:paddingLeft="6dip"
        android:paddingRight="6dip" >

        <TextView
            android:id="@+id/tv_aboutus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="关于"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/jiantou1" />
    </RelativeLayout>

       </RelativeLayout>
</RelativeLayout>